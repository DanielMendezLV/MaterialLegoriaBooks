<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="halley.md.legoriabooks" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".Activity.LoginActivity"
            android:label="@string/login" >
        </activity>
        <activity
            android:name=".Activity.GetAccountActivity"
            android:label="@string/title_activity_getAcount" >
        </activity>
        <activity
            android:name=".Splash.Splash"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Activity.SearchActivity"
            android:label="Buscar..." >
        </activity>
        <activity
            android:name=".Activity.HelpActivity"
            android:label="@string/title_activity_help" >
        </activity>
        <activity
            android:name=".Activity.MarkupActivity"
            android:label="@string/title_activity_markup" >
        </activity>
        <activity
            android:name=".Activity.ConfigActivity"
            android:label="@string/title_activity_config" >
        </activity>
        <activity
            android:name=".Activity.AboutUsActivity"
            android:label="@string/title_activity_about_us" >
        </activity>

    </application>

</manifest>
