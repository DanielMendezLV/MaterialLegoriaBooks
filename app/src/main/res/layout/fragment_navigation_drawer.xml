<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context="org.halley.md.hallscrum.Fragment.FragmentDrawer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryBackground"
        android:id="@+id/containerDrawerImage"

        >

        <ImageView
            android:layout_width="@dimen/background_navigation_width"
            android:layout_height="@dimen/background_navigation_height"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="@dimen/drawer_margin_top"
            android:background="@color/colorPrimaryBackground"
            android:scaleType="fitCenter"
            android:src="@drawable/img_background"

            />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/drawerList"
        android:layout_below="@+id/containerDrawerImage"
        android:layout_alignParentStart="true">
        <!-- ctr + alt + L-->


    </android.support.v7.widget.RecyclerView>

</RelativeLayout>








